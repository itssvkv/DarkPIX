<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/mainLayout"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:paddingVertical="12dp"    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">    <TextView        android:id="@+id/bottomSheetPhotoPhotographerTv"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginEnd="15dp"        android:textSize="35sp"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        tools:text="A" />    <TextView        android:id="@+id/bottomSheetPhotographerTv"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginStart="15dp"        android:layout_marginTop="12dp"        android:textSize="17sp"        android:textStyle="bold"        app:layout_constraintStart_toEndOf="@+id/bottomSheetPhotoPhotographerTv"        app:layout_constraintTop_toTopOf="parent"        tools:text="mohamedgamal" />    <TextView        android:id="@+id/bottomSheetDesTv"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginHorizontal="8dp"        android:layout_marginVertical="8dp"        android:layout_marginTop="12dp"        android:textSize="17sp"        android:textStyle="bold"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/bottomSheetPhotoPhotographerTv"        tools:text="mohamedgamal" /></androidx.constraintlayout.widget.ConstraintLayout>